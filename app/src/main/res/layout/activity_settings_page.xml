<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSettingsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings" />

            <TextView
                android:id="@+id/tvSettingsDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/default_settings" />

            <TextView
                android:id="@+id/tvSettingsAskSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ask_to_save" />

            <TextView
                android:id="@+id/tvSettingsPostVisiblity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/public_postings_visibility" />

            <TextView
                android:id="@+id/tvSettingsAskPostPublic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ask_to_post_publicly" />

            <TextView
                android:id="@+id/tvSettingsSyncDataAuto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sync_data_automatically" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Switch
                android:id="@+id/swtSetDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/off"
                android:layout_weight="1"
                />

            <Switch
                android:id="@+id/swtAskSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/never"
                android:layout_weight="1"
                />

            <Switch
                android:id="@+id/swtPostingVisibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/visible"
                android:layout_weight="1"
                />

            <Switch
                android:id="@+id/swtAskPostPublic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/never"
                android:layout_weight="1"
                />

            <Switch
                android:id="@+id/swtSyncDataAuto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/btnConfirmSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/confirm_settings" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>